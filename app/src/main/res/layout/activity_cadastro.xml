<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CadastroActivity"
    android:background="@drawable/livrofundo">

    <EditText
        android:id="@+id/editTextNomeUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="#79685C"
        android:ems="10"
        android:hint=" Nome"
        android:inputType="textPersonName"
        android:textColorHint="#80FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <EditText
        android:id="@+id/editTextSobrenomeUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#79685C"
        android:ems="10"
        android:hint=" Sobrenome"
        android:inputType="textPersonName"
        android:textColorHint="#80FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/editTextNomeUsuario"
        app:layout_constraintStart_toStartOf="@+id/editTextNomeUsuario"
        app:layout_constraintTop_toBottomOf="@+id/editTextNomeUsuario" />

    <EditText
        android:id="@+id/editTextEmailUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#79685C"
        android:ems="10"
        android:hint=" E - mail"
        android:inputType="textWebEmailAddress"
        android:textColorHint="#80FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/editTextSobrenomeUsuario"
        app:layout_constraintStart_toStartOf="@+id/editTextSobrenomeUsuario"
        app:layout_constraintTop_toBottomOf="@+id/editTextSobrenomeUsuario" />

    <EditText
        android:id="@+id/editTextSenhaUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#79685C"
        android:ems="10"
        android:hint=" Senha"
        android:inputType="textPassword"
        android:textColorHint="#80FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/editTextSobrenomeUsuario"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextSobrenomeUsuario"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmailUsuario" />

    <EditText
        android:id="@+id/editTextConfirmaSenhaUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#79685C"
        android:ems="10"
        android:hint=" Confirmar senha"
        android:inputType="textPassword"
        android:textColorHint="#80FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/editTextSobrenomeUsuario"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextSobrenomeUsuario"
        app:layout_constraintTop_toBottomOf="@+id/editTextSenhaUsuario" />

    <Button
        android:id="@+id/buttonCriaUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Criar usuÃ¡rio"
        app:backgroundTint="#79685C"
        app:layout_constraintEnd_toEndOf="@+id/editTextConfirmaSenhaUsuario"
        app:layout_constraintStart_toStartOf="@+id/editTextConfirmaSenhaUsuario"
        app:layout_constraintTop_toBottomOf="@+id/editTextConfirmaSenhaUsuario" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_user_pic"
        tools:ignore="VectorDrawableCompat" />
</androidx.constraintlayout.widget.ConstraintLayout>